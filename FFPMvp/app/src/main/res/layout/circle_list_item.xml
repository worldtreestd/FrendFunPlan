<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F0"
    android:orientation="vertical"
    android:padding="3dp"
    >

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="7dp"
    android:id="@+id/circle_item"
    app:cardCornerRadius="6dp"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:foreground="@drawable/card_foreground_selector"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.v7.widget.AppCompatImageView
        android:id="@+id/create_circle"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:transitionName="circle_image"
        android:scaleType="fitXY"
        />

        <TextView
            android:id="@+id/circle_introduce"
            android:textSize="12sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:ellipsize="end"
            android:lines="2"
            android:text="不能改变世界那就让世界变得更加美好" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_marginBottom="2dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/circle_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:text="世界树项目组"
                android:transitionName="circle_name"
                android:layout_weight="1"
                android:textColor="@color/black"
                android:textSize="15sp" />

            <android.support.v7.widget.AppCompatImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginLeft="4dp"
                android:layout_gravity="center|end"
                android:src="@drawable/watch" />

            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/watch_num_tv"
                android:textSize="10sp"
                android:layout_gravity="center|end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="4dp"
                android:text="围观xx次" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>

</LinearLayout>