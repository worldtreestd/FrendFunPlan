<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="20dp">

    <View
        android:id="@+id/view1"
        android:layout_width="2dp"
        android:layout_height="17dp"
        android:layout_marginLeft="30dp"
        android:background="@color/light_blue"/>

    <ImageView
        android:id="@+id/imv"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:layout_marginLeft="24dp"
        android:layout_below="@+id/view1"
        android:src="@drawable/point_selected"/>

    <View
        android:id="@+id/view2"
        android:layout_width="2dp"
        android:layout_height="47dp"
        android:layout_below="@+id/imv"
        android:layout_marginLeft="30dp"
        android:background="@color/light_blue"/>

    <RelativeLayout
        android:id="@+id/relative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imv"
        android:layout_marginLeft="3dp"
        android:layout_marginTop="-20dp"
        android:layout_toRightOf="@+id/imv"
        android:padding="5dp"
        android:background="@color/transparency">

        <TextView
            android:id="@+id/plan_finished_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:textColor="@color/light_blue"
            android:text="5:20"
            android:gravity="center"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/plan_finished_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@id/plan_finished_time"
            android:text="我完成了这么一个计划"
            android:textSize="14sp"/>

    </RelativeLayout>

    <View
        android:id="@+id/view5"
        android:layout_width="2dp"
        android:layout_height="5dp"
        android:layout_below="@+id/plan_finished_date"
        android:layout_alignLeft="@+id/view2"
        android:background="@color/light_blue"/>

    <TextView
        android:id="@+id/plan_finished_date"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_alignBottom="@+id/view2"
        android:layout_marginTop="-2dp"
        android:textColor="@color/colorPrimary"
        android:text="2017-05-20"
        android:textSize="9sp"/>

</RelativeLayout>