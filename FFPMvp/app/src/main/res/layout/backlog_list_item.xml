<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_height="wrap_content"
android:minHeight="130dp"
android:layout_margin="4dp"
xmlns:app="http://schemas.android.com/apk/res-auto"
app:cardCornerRadius="5dp"
android:foreground="?android:attr/selectableItemBackground"
android:id="@+id/cardview"
    >

<RelativeLayout
    android:padding="@dimen/dp_10"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <com.legend.ffpmvp.common.view.CircleImageView
        android:id="@+id/circle"
        android:layout_width="32dp"
        android:layout_marginTop="5dp"
        android:layout_height="32dp"
        android:src="@drawable/ic_circle"/>

    <TextView
        android:id="@+id/plan_from"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/circle"
        android:layout_centerHorizontal="true"
        android:paddingLeft="@dimen/dp_10"
        android:layout_marginTop="10dp"
        android:text="湖南信息职业技术学院        "
        android:textColor="@color/colorPrimary"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/plan_start_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/plan_from"
        android:layout_alignBottom="@+id/plan_from"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="13dp"
        android:text="yyyy/mm/dd"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text=" 详情："
        android:textSize="17sp" />

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/plan_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/content"
        android:layout_alignBottom="@+id/content"
        android:layout_toEndOf="@+id/content"
        android:text="xxxxxx"
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="18sp"
        android:layout_marginBottom="20dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="40dp"
        android:orientation="horizontal">

        <android.support.v7.widget.AppCompatButton
            android:layout_marginLeft="20dp"
            android:id="@+id/finished_btn"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:textColor="@color/white"
            android:foreground="@drawable/card_foreground_selector"
            android:background="@drawable/shape_blue"
            android:text="已完成！" />

        <android.support.v7.widget.AppCompatButton
            android:layout_marginLeft="70dp"
            android:id="@+id/delete_plan"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:textColor="@color/white"
            android:foreground="@drawable/card_foreground_selector"
            android:background="@drawable/shape_blue"
            android:text="删除！" />

    </LinearLayout>

</RelativeLayout>

</android.support.v7.widget.CardView>

