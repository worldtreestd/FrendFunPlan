<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_margin="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp"
    app:cardBackgroundColor="#05def2"
    android:id="@+id/cardview"
    android:orientation="vertical"
    app:cardElevation="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/plan_from"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="  From: 湖南信息职业技术学院        "
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/plan_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/plan_from"
            android:layout_alignBottom="@+id/plan_from"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="13dp"
            android:text="yyyy/mm/dd"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:text=" 详情："
            android:textColor="#FFFFFF"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/plan_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/content"
            android:layout_alignBottom="@+id/content"
            android:layout_toEndOf="@+id/content"
            android:text="xxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxxx"
            android:textSize="15sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="40dp"
            android:orientation="horizontal">

            <Button
                android:layout_marginLeft="20dp"
                android:id="@+id/finished_btn"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@drawable/shape"
                android:text="已完成！" />

            <Button
                android:layout_marginLeft="70dp"
                android:id="@+id/delete_plan"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:background="@drawable/shape"
            android:text="删除！" />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>
